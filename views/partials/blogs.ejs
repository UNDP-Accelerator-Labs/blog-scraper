<%
  // CREATE ALIASES 
  const results = locals?.results;
  const current_page = locals?.current_page;
  const total_records = +(locals?.total_records) || 0;
%>

<div class="cell large-9 small-12 generic-content">
  <h6> Showing <%= total_records %> results.</h6>
  <div class="grid-x grid-margin-x content-data">
    <input hidden value="<%= current_page %>" id="current_page" />
    <% for (const blog of results || []) { %>
      <div class="cell medium-4">
        <div class="content-card <%= (blog.article_type === 'publications') ? 'card-emphasize' : 'card' %>">
          <a href="<%= blog.url %>" target="_blank">
            <h6 class="" tabindex="0" data-viewport="false"><%- blog.article_type %></h6>
            <div class="content-caption">
              <h5 class="" tabindex="0" data-viewport="false">
                <%= blog.title %>
              </h5>
              <p>
                <%= blog.matched_texts || '' %>
              </p>
              <span class="cta__link cta--arrow">
                READ MORE
                <i></i>
              </span>
            </div>
          </a>
        </div>
      </div>
    <% } %>
  </div>
  <br/>
  <%- include ('./pagination.ejs') %> 
</div>

